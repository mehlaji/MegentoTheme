<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    <body>
        <referenceBlock name="xstore_header" remove="true"/>
        <move element="goto.product" destination="product.info.main" after="-"/>
        <move element="goto.product.configurable" destination="product.info.main" after="-"/>
        <move element="goto.product.bundle" destination="product.info.main" after="-"/>
        <move element="goto.product.downloadable" destination="product.info.main" after="-"/>
    </body>
</page>
